{
  "name": "x402 Dev (CI-matched)",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=${localWorkspaceFolder},target=/src,type=bind",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=/dev/tpm0,target=/dev/tpm0,type=bind",
    "source=/dev/tpmrm0,target=/dev/tpmrm0,type=bind"
  ],
  "workspaceFolder": "/src",
  "runArgs": [
    "--network=host",
    "--user", "1000:1000",
    "--group-add", "134",
    "--group-add", "120",
    "--group-add", "0",
    "--privileged"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "tamasfe.even-better-toml",
        "serayuzgur.crates"
      ],
      "settings": {
        "telemetry.telemetryLevel": "off",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash",
            "args": ["-l"]
          }
        },
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "remoteUser": "user"
}
